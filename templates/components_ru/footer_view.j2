<script>
$(document).ready(function() {
    function updateTime() {
        const timezones = [
            'Europe/Moscow'
        ];
        
        timezones.forEach((tz, index) => {
            const time = new Date().toLocaleTimeString('ru-RU', {
                timeZone: tz,
                hour12: false,
                hour: '2-digit',
                minute: '2-digit'
            });
            $('.time-block .flex-cl:last-child p').eq(index).text(time);
        });
    }
    
    updateTime();
    setInterval(updateTime, 1000);
});
</script>
