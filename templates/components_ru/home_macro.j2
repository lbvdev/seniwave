<script>
$(document).ready(function () {
    const $cards = $('.page.pricing .card');
    const $continueBtn = $('.continue-pricing');
    const $bookPricing = $('.book-pricing');
    const $priceWrapper = $('.price-wrapper');

    function updateButtons(data_page='') {
        const hasEnabled = $cards.hasClass('enabled');
        const hasSelected = $cards.hasClass('selected');
        $('.learn-more').attr('href', '/pricing' + data_page);
        console.log(data_page);

        if (hasEnabled) {
            $bookPricing.removeClass('hidden');
            $continueBtn.addClass('hidden');
            $priceWrapper.addClass('muted');
        } else if (hasSelected) {
            $bookPricing.addClass('hidden');
            $continueBtn.removeClass('hidden').addClass('active');
            $priceWrapper.removeClass('muted');
        } else {
            $bookPricing.addClass('hidden');
            $continueBtn.addClass('hidden').removeClass('active');
            $priceWrapper.removeClass('muted');
            $('.learn-more').attr('href', '/pricing');
        }
    }
    $cards.hover(function () {
        if ('ontouchstart' in window || navigator.maxTouchPoints > 0) return;
        if ($cards.hasClass('enabled')) return;
        $cards.removeClass('selected');
        $(this).addClass('selected');
        updateButtons();
    });

    $cards.on('click', function () {
        const $clicked = $(this);
        const hasEnabled = $cards.hasClass('enabled');
        if (hasEnabled) {
            $cards.removeClass('enabled disabled selected');
            // touchscreen fix
            if (!('ontouchstart' in window || navigator.maxTouchPoints > 0)) {
                $clicked.addClass('selected');
                data_page = '';
            }
        } else {
            $clicked.addClass('enabled');
            $cards.not($clicked).addClass('disabled').removeClass('selected');
            data_page = $clicked.data('page');
        }
        updateButtons(data_page);
    });

    $continueBtn.on('click', function () {
        const $selected = $cards.filter('.selected');
        if ($selected.length) {
            $selected.addClass('enabled');
            $cards.not($selected).addClass('disabled').removeClass('selected');
        }
        updateButtons();
    });

    $('.book-pricing.back').on('click', function () {
        $cards.removeClass('enabled disabled selected');
        updateButtons();
    });
});
</script>
{% endmacro %}


