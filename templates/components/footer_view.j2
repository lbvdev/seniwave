<script>
$(document).ready(function() {
    function updateTime() {
        const timezones = [
            'Europe/Amsterdam', 
            'Europe/Sofia',
            'Asia/Dubai'
        ];
        
        timezones.forEach((tz, index) => {
            const time = new Date().toLocaleTimeString('en-GB', {
                timeZone: tz,
                hour12: false,
                hour: '2-digit',
                minute: '2-digit'
            });
            $('.time-block .flex-cl:last-child p').eq(index).text(time);
        });
    }
    
    updateTime();
    setInterval(updateTime, 1000);
});
</script>
